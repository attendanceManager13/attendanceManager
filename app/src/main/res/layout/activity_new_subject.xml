<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewSubjectActivity">
    
    <EditText
        android:id="@+id/edit_text_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/edit_text_attended_lectures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Attended lectures"
        android:inputType="number"/>
    <EditText
        android:id="@+id/edit_text_total_lectures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Total Lectures"
        android:inputType="number"/>
    <!--<NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priority_number_picker">

    </NumberPicker>-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_button"/>

</LinearLayout>